#!/bin/bash

# ðŸ‘‹ CrÃ©e le dossier source et dÃ©place main.ts
mkdir -p source
mv main.ts source/ 2>/dev/null

# ðŸ§¼ Supprime les anciens fichiers si besoin
rm -f package.json package-lock.json tsconfig.json vercel.json

# ðŸ§± Initialise npm et installe les dÃ©pendances
npm init -y

npm install express cors
npm install --save-dev tsup @types/express @types/node typescript

# âœï¸ Met Ã  jour package.json
cat > package.json <<EOF
{
  "name": "xero-partner",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "build": "tsup source/main.ts --format cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.10",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  }
}
EOF

# ðŸ”§ CrÃ©e tsconfig.json
cat > tsconfig.json <<EOF
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["source"]
}
EOF

# ðŸ“¦ Build
npm run build

# âš™ï¸ CrÃ©e vercel.json
cat > vercel.json <<EOF
{
  "version": 2,
  "builds": [
    {
      "src": "dist/main.cjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.cjs"
    }
  ]
}
EOF

# ðŸš€ DÃ©ploiement sur Vercel
vercel --prod
./setup.sh


